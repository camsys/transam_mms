.btn-group.pull-right.panel-action
  %button.btn.btn-primary.btn-sm.dropdown-toggle{:data => {:toggle => 'dropdown'}}
    %i.fa.fa-cog
    = " Actions"
    %span.caret
  %ul.dropdown-menu{:role => 'menu'}
    %li
      = link_to edit_inventory_maintenance_event_path(@asset, @maintenance_event) do
        %i.fa.fa-edit.fa-fw
        = " Update this service record"
    %li.divider
    %li
      = link_to inventory_maintenance_event_path(@asset, @maintenance_event), :method => :delete, :data => {:confirm => "Are you sure you want to remove this service record? The action can't be undone."} do
        %i.fa.fa-trash-o.fa-fw
        = " Remove this record"
