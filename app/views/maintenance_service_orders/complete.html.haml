            = render 'actions'
      .panel-body    
        = render :partial => 'summary', :locals => {:maintenance_service_order => @maintenance_service_order} 
        
  .col-md-8
    .panel.panel-default.header-part
      .panel-heading
        .row
          .col-md-12
            %h3.panel-title
              %i.fa.fa-wrench
              Service Record
                
      .panel-body
        = render 'complete_form'

