:ruby
  table_dom_id = SecureRandom.hex

%table.table.table-hover{:id => table_dom_id, :data => {:toggle => 'table',
  :card_view => "false",
  :pagination => 'true',
  :page_list => "[5, 10, 20, 50, 100, 200]",
  :page_size => current_user.num_table_rows,
  :show_pagination_switch => 'true',
  :search => 'false',
  :show_columns => 'true',
  :show_export => 'true',
  :show_toggle => 'true',
  :resizable => 'true',
  :search => 'false'}}
  %thead
    %tr
      %th.left Number
      %th.right Date
      %th.right Status
      %th.right Provider
      %th.right Asset

  %tbody
    - maintenance_service_orders.each do |o|
      %tr.popup-details{:data => {:action_path => maintenance_service_order_path(o)}}
        %td.left= o.workorder_number
        %td.right= format_as_date(o.order_date)
        %td.right= o.state
        %td.right= o.maintenance_provider
        %td.right= o.asset.description

:javascript

  $(window).resize(function() {
    $("##{table_dom_id}").bootstrapTable('resetView');
  });